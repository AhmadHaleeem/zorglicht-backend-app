<% layout('layout') -%>

<!-- Welcome Section -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
        <p class="mb-0 text-muted">Welkom terug, <%= user.naam %>!</p>
    </div>
    <div class="text-end">
        <small class="text-muted">
            <i class="fas fa-clock me-1"></i>
            <%= new Date().toLocaleDateString('nl-NL', { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            }) %>
        </small>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <!-- Total Employees Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Totaal Werknemers
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            <%= stats && stats.totalEmployees ? stats.totalEmployees : 0 %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Roles Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Totaal Rollen
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            <%= stats && stats.totalRoles ? stats.totalRoles : 0 %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-tag fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Departments Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Afdelingen
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            <%= stats && stats.departments ? stats.departments : 0 %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-building fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- New This Month Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Nieuw Deze Maand
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            <%= stats && stats.newThisMonth ? stats.newThisMonth : 0 %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-plus fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions Section -->
<% if (user.rol === 'admin') { %>
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-bolt me-2"></i>
                    Snelle Acties
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a href="/werknemers" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-users mb-2 d-block"></i>
                            Beheer Werknemers
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/rollen" class="btn btn-warning btn-lg w-100">
                            <i class="fas fa-user-tag mb-2 d-block"></i>
                            Beheer Rollen
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/bestanden" class="btn btn-info btn-lg w-100">
                            <i class="fas fa-file-alt mb-2 d-block"></i>
                            Bestanden Beheer
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/werknemers/nieuw" class="btn btn-success btn-lg w-100">
                            <i class="fas fa-user-plus mb-2 d-block"></i>
                            Nieuwe Werknemer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% } else { %>
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-bolt me-2"></i>
                    Snelle Acties
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <a href="/werknemers/<%= user._id %>" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-user mb-2 d-block"></i>
                            Mijn Profiel
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a href="/bestanden" class="btn btn-info btn-lg w-100">
                            <i class="fas fa-file-alt mb-2 d-block"></i>
                            Mijn Bestanden
                        </a>
                    </div>
                    <% if (user.rol === 'admin') { %>
                    <div class="col-md-4 mb-3">
                        <a href="/bestanden/uploaden" class="btn btn-success btn-lg w-100">
                            <i class="fas fa-upload mb-2 d-block"></i>
                            Upload Bestand
                        </a>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<% } %>

<!-- Content Row -->
<div class="row">
    <% if (user.rol === 'admin') { %>
    <!-- Recent Employees (Admin Only) -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-users me-2"></i>
                    Recente Werknemers
                </h6>
                <a href="/werknemers" class="btn btn-sm btn-primary">
                    <i class="fas fa-list me-1"></i>
                    Alle Werknemers
                </a>
            </div>
            <div class="card-body">
                <% if (stats && stats.recentEmployees && stats.recentEmployees.length > 0) { %>
                    <% stats.recentEmployees.forEach(function(employee) { %>
                        <div class="d-flex align-items-center justify-content-between mb-3 p-2 border rounded">
                            <div class="d-flex align-items-center">
                                <div class="avatar me-3">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                        <%= employee.naam ? employee.naam.charAt(0).toUpperCase() : 'N' %>
                                    </div>
                                </div>
                                <div>
                                    <h6 class="mb-0"><%= employee.naam || 'Onbekend' %></h6>
                                    <small class="text-muted"><%= employee.functie || 'Geen functie' %> - <%= employee.afdeling || 'Geen afdeling' %></small>
                                </div>
                            </div>
                            <div>
                                <a href="/werknemers/<%= employee.id || employee._id %>" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-muted mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Geen recente werknemers gevonden.
                    </p>
                <% } %>
            </div>
        </div>
    </div>
    <% } %>

    <!-- Department Statistics -->
    <div class="<%= user.rol === 'admin' ? 'col-lg-6' : 'col-lg-8' %> mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-chart-pie me-2"></i>
                    Afdeling Statistieken
                </h6>
            </div>
            <div class="card-body">
                <% if (stats && stats.departmentStats && Object.keys(stats.departmentStats).length > 0) { %>
                    <% 
                        const totalEmployeesInDepts = Object.values(stats.departmentStats).reduce((sum, count) => sum + count, 0);
                    %>
                    <% Object.entries(stats.departmentStats).forEach(function([department, count]) { %>
                        <% const percentage = totalEmployeesInDepts > 0 ? Math.round((count / totalEmployeesInDepts) * 100) : 0; %>
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <span class="font-weight-bold"><%= department || 'Onbekende Afdeling' %></span>
                                <span class="text-muted"><%= count %> werknemers (<%= percentage %>%)</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: <%= percentage %>%" aria-valuenow="<%= percentage %>" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-muted mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Geen afdelingstatistieken beschikbaar.
                    </p>
                <% } %>
            </div>
        </div>
    </div>

    <!-- File Statistics -->
    <div class="<%= user.rol === 'admin' ? 'col-lg-12' : 'col-lg-4' %> mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-file-alt me-2"></i>
                    Bestand Statistieken
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-6 mb-3">
                        <div class="border-end">
                            <h4 class="text-primary mb-1">
                                <%= stats && stats.userFiles ? stats.userFiles : 0 %>
                            </h4>
                            <small class="text-muted">Mijn Bestanden</small>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h4 class="text-success mb-1">
                            <%= stats && stats.totalFiles ? stats.totalFiles : 0 %>
                        </h4>
                        <small class="text-muted">Totaal Bestanden</small>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="/bestanden" class="btn btn-outline-primary btn-sm me-2">
                        <i class="fas fa-folder-open me-1"></i>
                        Bekijk Bestanden
                    </a>
                    <% if (user.rol === 'admin') { %>
                    <a href="/bestanden/uploaden" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-upload me-1"></i>
                        Upload Nieuw
                    </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional Information Row -->
<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-info-circle me-2"></i>
                    Systeem Informatie
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <div class="text-center">
                            <i class="fas fa-server fa-2x text-primary mb-2"></i>
                            <h6>Systeem Status</h6>
                            <span class="badge bg-success">Online</span>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="text-center">
                            <i class="fas fa-database fa-2x text-info mb-2"></i>
                            <h6>Database</h6>
                            <span class="badge bg-success">Verbonden</span>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="text-center">
                            <i class="fas fa-shield-alt fa-2x text-warning mb-2"></i>
                            <h6>Jouw Rol</h6>
                            <span class="badge <%= user.rol === 'admin' ? 'bg-danger' : 'bg-primary' %>">
                                <%= user.rol === 'admin' ? 'Administrator' : 'Gebruiker' %>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="text-center">
                            <i class="fas fa-clock fa-2x text-secondary mb-2"></i>
                            <h6>Laatste Login</h6>
                            <small class="text-muted">Nu</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>