<% layout('layout') -%>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Nieuwe Rol Toevoegen</h2>
    <a href="/rollen" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>
        Terug naar Rollen
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-user-tag me-2"></i>
                    Rol Informatie
                </h6>
            </div>
            <div class="card-body">
                <form action="/rollen" method="POST">
                    <div class="mb-3">
                        <label for="naam" class="form-label">Rol Naam *</label>
                        <input type="text" class="form-control" id="naam" name="naam" required>
                        <div class="form-text">Geef de rol een duidelijke en beschrijvende naam</div>
                    </div>

                    <div class="mb-4">
                        <label for="beschrijving" class="form-label">Beschrijving</label>
                        <textarea class="form-control" id="beschrijving" name="beschrijving" rows="3" placeholder="Optionele beschrijving van de rol..."></textarea>
                        <div class="form-text">Beschrijf wat deze rol inhoudt en welke verantwoordelijkheden erbij horen (optioneel)</div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a href="/rollen" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>
                            Annuleren
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>
                            Rol Opslaan
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-info">
                    <i class="fas fa-lightbulb me-2"></i>
                    Rol Voorbeelden
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="text-primary">Administrator</h6>
                    <p class="small text-muted">Volledige toegang tot alle systemen en functies. Kan alle werknemers en rollen beheren.</p>
                </div>
                
                <hr>
                
                <div class="mb-3">
                    <h6 class="text-success">Manager</h6>
                    <p class="small text-muted">Kan teams beheren en rapporten bekijken. Beperkte administratieve rechten.</p>
                </div>
                
                <hr>
                
                <div class="mb-3">
                    <h6 class="text-warning">Developer</h6>
                    <p class="small text-muted">Toegang tot ontwikkelingstools en code repositories. Kan eigen gegevens bewerken.</p>
                </div>
                
                <hr>
                
                <div class="mb-0">
                    <h6 class="text-info">Support</h6>
                    <p class="small text-muted">Kan klanten helpen en basis ondersteuning bieden. Beperkte toegang tot systemen.</p>
                </div>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-warning">
                    <i class="fas fa-info-circle me-2"></i>
                    Tips voor Rollen
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Gebruik duidelijke en herkenbare namen
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Voeg een beschrijving toe voor duidelijkheid
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Rollen kunnen later worden aangepast
                    </li>
                    <li class="mb-0">
                        <i class="fas fa-check text-success me-2"></i>
                        Houd rollen simpel en specifiek
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
// Form validation
document.querySelector('form').addEventListener('submit', function(e) {
    const naam = document.getElementById('naam').value.trim();
    
    let isValid = true;
    
    // Check required fields
    if (!naam) {
        document.getElementById('naam').classList.add('is-invalid');
        isValid = false;
    } else {
        document.getElementById('naam').classList.remove('is-invalid');
    }
    
    if (!isValid) {
        e.preventDefault();
    }
});

// Remove validation styling on input
document.querySelectorAll('input, textarea').forEach(input => {
    input.addEventListener('input', function() {
        this.classList.remove('is-invalid');
    });
});
</script>